{% extends '@layout/default.html.twig' %}

{% block title %}Editar cliente{% endblock %}

{% block content %}

<form method="post" action="{{ path('edit.post', { id: cliente.id }) }}">
  <div class="form-row">
    <div class="form-group col-md-9">
      <label for="nome">Nome completo</label>
      <input type="text" value="{{ cliente.nome }}" class="form-control" id="nome" name="nome" placeholder="Nome completo..." required>
    </div>
    <div class="form-group col-md-3">
      <label for="cpf">CPF</label>
      <input type="text" value="{{ cliente.cpf }}" class="form-control" id="cpf" name="cpf" placeholder="CPF" maxlength="11" required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-2">
      <label for="data-nasc">Data de nascimento</label>
      <input type="date" value="{{ cliente.dataNasc }}" class="form-control" id="data-nasc" name="data_nasc" placeholder="Rua dos Bobos, nº 0" required>
    </div>
    <div class="form-group col-md-1">
      <label for="sexo">Sexo</label>
      <select value="F" class="form-control" id="sexo" name="sexo">
        <option {{ cliente.sexo == "M" ? "selected": "" }}>M</option>
        <option {{ cliente.sexo == "F" ? "selected": "" }}>F</option>
      </select>
    </div>
    <div class="form-group col-md-2">
      <label for="civil">Estado civil</label>
      <select value="F" class="form-control" id="civil" name="civil">
        <option {{ cliente.civil == "Solteiro" ? "selected": "" }}>Solteiro</option>
        <option {{ cliente.civil == "Casado" ? "selected": "" }}>Casado</option>
        <option {{ cliente.civil == "Divorciado" ? "selected": "" }}>Divorciado</option>
        <option {{ cliente.civil == "Viuvo" ? "selected": "" }}>Viuvo</option>
      </select>
    </div>
    <div class="form-group col-md-7">
      <label for="email">E-mail</label>
      <input type="email" value="{{ cliente.email }}" class="form-control" id="email" name="email" placeholder="exemplo@email.com" required>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-3">
      <label for="telefone">Telefone</label>
      <input type="text" value="{{ cliente.telefone }}" class="form-control" id="telefone" name="telefone" placeholder="67999889955">
    </div>
    <div class="form-group col-md-6">
      <label for="endereco">Endereço</label>
      <input type="text" value="{{ cliente.endereco }}" class="form-control" id="endereco" name="endereco" placeholder="Apartamento, hotel, casa, etc.">
    </div>
    <div class="form-group col-md-3">
      <label for="cep">CEP</label>
      <input type="text" value="{{ cliente.cep }}" class="form-control" id="cep" name="cep" placeholder="79415000">
    </div>
  </div>

  <button type="submit" class="btn btn-info">Atualizar cadastro</button>
  <a class="btn btn-primary" href="{{ path('home.get') }}">Voltar</a>
</form>

{% endblock %}
