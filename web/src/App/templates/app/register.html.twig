{% extends '@layout/default.html.twig' %}

{% block title %}Registrar cliente{% endblock %}

{% block content %}

<form method="post" action="{{ path('register.post') }}">
  <div class="form-row">
    <div class="form-group col-md-9">
      <label for="nome">Nome completo</label>
      <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome completo..." required autofocus>
    </div>
    <div class="form-group col-md-3">
      <label for="cpf">CPF</label>
      <input type="text" class="form-control" id="cpf" name="cpf" placeholder="CPF" maxlength="11" required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-2">
      <label for="data-nasc">Data de nascimento</label>
      <input type="date" class="form-control" id="data-nasc" name="data_nasc" placeholder="Rua dos Bobos, nº 0" required>
    </div>
    <div class="form-group col-md-1">
      <label for="sexo">Sexo</label>
      <select value="F" class="form-control" id="sexo" name="sexo">
        <option>M</option>
        <option>F</option>
      </select>
    </div>
    <div class="form-group col-md-2">
      <label for="civil">Estado civil</label>
      <select value="F" class="form-control" id="civil" name="civil">
        <option>Solteiro</option>
        <option>Casado</option>
        <option>Divorciado</option>
        <option>Viuvo</option>
      </select>
    </div>
    <div class="form-group col-md-7">
      <label for="email">E-mail</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="exemplo@email.com" required>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-3">
      <label for="telefone">Telefone</label>
      <input type="text" class="form-control" id="telefone" name="telefone" placeholder="67999889955">
    </div>
    <div class="form-group col-md-6">
      <label for="endereco">Endereço</label>
      <input type="text" class="form-control" id="endereco" name="endereco" placeholder="Apartamento, hotel, casa, etc.">
    </div>
    <div class="form-group col-md-3">
      <label for="cep">CEP</label>
      <input type="text" class="form-control" id="cep" name="cep" placeholder="79415000">
    </div>
  </div>

  <button type="submit" class="btn btn-success">Registrar novo cliente</button>
  <a class="btn btn-primary" href="{{ path('home.get') }}">Voltar</a>
</form>

{% endblock %}
